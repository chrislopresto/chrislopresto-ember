  <div class='menu-spacer'>
    <div class='site-content'>
      <div class='menu'>
        <div class='menu-title'>{{#link-to 'index'}}Chris LoPresto{{/link-to}}</div>
        <ul class='site-sections'>
          <li>{{#link-to 'index'}}{{unbound fa-icon 'home'}}About{{/link-to}}</li>
          <li>{{#link-to 'blog'}}{{unbound fa-icon 'paragraph'}}Blog{{/link-to}}</li>
